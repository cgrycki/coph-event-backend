/**
 * Server Secrets (API keys)
 */

// Create an object that holds our keys
const secrets = {
  mongodb: 'mongodb://<username>:<password>@<host>:<port>/<document collection>',
  workflow: '<oAuth key>'
};

/**
 * @description Create a short function that will return a secret API key without exposing the object itself.
 * @param {string} key - Indicates which API key to return.
 * @returns {string} API - Return secret API key.
 */
const getSecret = key => secrets[key];

module.exports = getSecret;
